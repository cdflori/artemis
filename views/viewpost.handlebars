{{> navbar user}}

<div class="container">
    <div class="row">
        <div class="col-md" id="userposts">
            <legend>Job Postings</legend>
            <div id="job-posts">
                {{#with job}}
                <div class="job-post-card card text-white bg-primary mb-3">
                    <div class="card-header">
                        <h4 class="text-white">{{title}}</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{description}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{time}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{benefits}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{salary}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{location}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{experience}}</p>
                    </div>
                </div>
                {{/with}}
            </div>
            {{#each applicants}}
            <div>
                {{"Profile.petName"}}
            </div>
            {{/each}}

        </div>

</div>

