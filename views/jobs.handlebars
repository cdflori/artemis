{{> navbar user}}

<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="jumbotron">
                <h4 class="display-6">Hello, {{user.email}}!</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <legend>Job Postings</legend>
            <div id="job-posts">
                {{#each posts}}
                <div class="job-post-card card text-white bg-primary mb-3">
                    <div class="card-header">
                        <h4 class="text-white">{{title}}</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{description}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{time}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{benefits}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{salary}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{location}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{experience}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>


    </div>

    <div class="row">
        <div class="col-md">
            <form class="job-post">
                <fieldset>
                    <legend>Create A Job Posting</legend>
                    <p>
                        Fill out the form below to create your job posting. It will then be available for anyone on the
                        site.</p>
                    </p>
                    <div class="job-group">
                        <label for="title-input">Job Title</label>
                        <input type="text" class="job-control" id="title-input" aria-describedby="postHelp"
                            placeholder="Enter the job title">
                    </div>
                    <div class="job-group">
                        <label for="job-description">Job Description</label>
                        <textarea class="job-control" id="job-description" name="description"
                            placeholder="Enter a brief job description"></textarea>
                    </div>
                    <div class="job-group">
                        <label for="job-time">Time Frame</label>
                        <textarea class="job-control" id="job-time" name="time"
                            placeholder="Is this job full-time, part-time, or one-time?"></textarea>
                    </div>
                    <div class="job-group">
                        <label for="job-benefits">Job Benefits Include</label>
                        <textarea class="job-control" id="job-benefits" name="benefits"
                            placeholder="Enter a brief description of the benefits"></textarea>
                    </div>
                    <div class="job-group">
                        <label for="job-salary">Job Salary</label>
                        <textarea class="job-control" id="job-salary" name="salary"
                            placeholder="Enter the job salary"></textarea>
                    </div>
                    <div class="job-group">
                        <label for="job-location">Job Location</label>
                        <textarea class="job-control" id="job-location" name="location"
                            placeholder="Where is this job?"></textarea>
                    </div>
                    <div class="job-group">
                        <label for="job-experience">Purr-furred Experience</label>
                        <textarea class="job-control" id="job-experience" name="experience"
                            placeholder="What experience would you like the canidate to have"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Post Job!</button>
                </fieldset>
            </form>
            <br />
        </div>
    </div>
</div>

