{{> navbar user}}

<div class="container-fluid">
    <div class="row extra-margin">
        <div class="col-md-4">
            <div class="text-center">
                <img class="avatar" src="{{profile.avatar}}">

                <h3 class="extra-margin">{{profile.petName}}</h3>
                <span style="font-size: 28px;">
                    <a href="{{profile.facebook}}" aria-label="Facebook Icon"><i class="fab fa-facebook fa-lg"
                            aria-hidden="true"></i></a>
                </span>

                <span style="font-size: 28px;">
                    <a href="{{profile.twitter}}" aria-label="Twitter Icon"><i class="fab fa-twitter fa-lg"
                            aria-hidden="true"></i></a>
                </span>

                <span style="font-size: 28px;">
                    <a href="{{profile.instagram}}" aria-label="Instagram"><i class="fab fa-instagram fa-lg"
                            aria-hidden="true"></i></a>
                </span>

            </div>
        </div>

        <div class="col-md-8">
            <h3 class="extra-margin"> About {{profile.petName}}</h2>
                <p class="lead extra-margin">{{bio}}</p>
                <h3>Animal Type</h2>
                    <p>{{profile.petName}} is a {{animalType}}</p>
                    <p>{{profile.animalBreed}}</p>

                    <h3>Koalafications</h2>
                        <p>{{profile.qualifications}}</p>

                        <h3>Personality</h2>
                            <p>{{profile.personality}}</p>

                            <div class="owner-info">
                                <h3>Let's Connect</h3>
                                <br>
                                <h5>Owner Name: {{profile.ownerName}}</h5>
                                <h5>Email: {{profile.ownerEmail}}</h5>
                            </div>



        </div>
    </div>
</div>